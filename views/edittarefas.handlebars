<div class="card">
    <div class="card-body">
    <h4>Editar Tarefa</h4>
        <form action="/tarefas/edit" method="POST">
        <input type="hidden" name="id" value="{{tarefa._id}}">
            <label for="titulo" class="mt-3">Titulo:</label>
            <input type="text" name="titulo" class="form-control" value="{{tarefa.titulo}}" required>

            <label for="descricao">Descrição: </label>
            <textarea name="descricao" class="form-control" required >{{tarefa.descricao}}</textarea>

            <label for="prioridade" class="mt-3">Selecionar prioridade</label>
            <select name="prioridade" class="custom-select" required>
                 <option value="" selected disabled hidden>Escolha a prioridade</option>
                <option value="alta">Alta</option>
                <option value="media">Média</option>
                <option value="baixa">Baixa</option>
            </select>
            <label for="prazo" class="mt-3">Prazo:</label>
            <input type="date" name="prazo" class="form-control" value="{{tarefa.prazo}}">

           <a href="/tarefas/edit"><button type="submit" class="btn btn-success mt-4">Editar Tarefa</button></a>
        </form>
    </div>
</div>
