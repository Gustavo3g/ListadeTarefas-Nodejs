<div class="card">
    <div class="card-body">
    <h4>Nova Tarefa</h4>
        <form action="/tarefa/nova" method="POST">
            <label for="titulo" class="mt-3">Titulo:</label>
            <input type="text" name="titulo" class="form-control" required>

            <label for="descricao">Descrição: </label>
            <textarea name="descricao" class="form-control" required></textarea>

            <label for="prioridade" class="mt-3">Selecionar prioridade</label>
            <select name="prioridade" class="custom-select" required>

                <option value="alta">Alta</option>
                <option value="media">Média</option>
                <option value="baixa">Baixa</option>
            </select>
            <label for="prazo" class="mt-3">Prazo:</label>
            <input type="date" name="prazo" class="form-control">

            <button type="submit" class="btn btn-success mt-4">Criar Postagem</button>
        </form>
    </div>
</div>
